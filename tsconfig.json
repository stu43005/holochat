{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
        "lib": ["es2021"],
		"declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/typings",
		],
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
